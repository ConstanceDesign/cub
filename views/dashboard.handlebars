        <option value="Extracurricular">Extracurricular</option>
        <option value="Vacation">Vacation</option>
        <option value="Drop-offs/Pick-ups">Drop-offs/Pick-up</option>
        <option value="Expenses">Expenses</option>
</select>
    </div>
    <div></div>
    {{> post-info post}}

